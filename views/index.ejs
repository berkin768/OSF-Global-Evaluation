<html>
<head>
  <link rel="stylesheet" type="text/css" href="/css/bootstrap.css">
  <link rel="stylesheet" type="text/css" href="/css/header.css">
  <script src="/js/jquery-3.3.1.min.js" type="text/javascript"></script>
  <script src="/js/angular.js" type="text/javascript"></script>
  <script src="/js/bootstrap.min.js" type="text/javascript"></script>
  <script src="/js/indexHandler.js" type="text/javascript"></script>
  <script src="/js/userFactory.js" type="text/javascript"></script>
  <script src="/js/productHandler.js" type="text/javascript"></script>
  <title>
    OSF GLOBAL
  </title>
</head>

<body ng-app="index" ng-controller="indexController">
  <header>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="/" style="padding-top:3px">
            <img width="200" height="40" src="/images/logo.png" style="float:left">
          </a>
        </div>
        <div id='navbar' class="navbar-collapse collapse">
          <ul class="nav navbar-nav">            
              <li ng-repeat="category in categories">
                    <a href="{{category.url}}">{{category.text}}</a>
              </li>
          </ul>
          <ul class="nav navbar-nav navbar-right" >
              <li ng-repeat="item in objects">
                <a name="wishlist" ng-if="item.type === 'wishlist'" ng-click="wishlist()" style="cursor:pointer" >
                  <span class="glyphicon glyphicon-star"></span> {{item.text}}    
                    <p class="rounded" style="float: right;text-align:center;margin-left: 5px;">  {{item.count}}</p>
              </a>
              <a name="basket" ng-if="item.type === 'basket'" ng-click="basket()" style="cursor:pointer" >
                  <span class="glyphicon glyphicon-shopping-cart"></span> {{item.text}}   
                    <p class="rounded" style="float: right;text-align:center;margin-left: 5px;">  {{item.count}}</p>
              </a>
                  <a name="profile" ng-if="item.type === 'profile'" ng-click="profile()"style="cursor:pointer" >{{item.text}}</a>
                  <a name="logout" ng-if="item.type === 'logout'" ng-click="logout()"style="cursor:pointer" >{{item.text}}</a>         
                  <a ng-if="item.type === 'unAuth'" href='{{item.url}}'style="cursor:pointer" >{{item.text}}</a>
               </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <div id='main' class="container jumbotron">
      <div id='category' class="well col-md-12" ng-repeat="category in categories">
        <div class="panel panel-default">
          <div class="panel-heading">
              {{category.text}}         
          </div>
          <div class="panel-body">
            <div id='image' style="height:100px;width:100px; display: table; float: left; margin-right:10px">             
                <img class="card-img-top" ng-src="/images/{{category.image_url}}" data-holder-rendered="true" style='display:block; margin:auto;width:100%; height:100%;'>               
            </div>
            <div class='well well-sm' id='information' style=" overflow: hidden; height:100px">
              <h5>
                  {{category.description}}       
              </h5>
            </div>
            <div id="button" style="text-align: center">
              <a class='btn btn-primary' href="/{{category.url}}">View Categories</a>
            </div>
          </div>
        </div>
      </div>
  </div>
</body>
</html>