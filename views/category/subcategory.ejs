<html>

<head>
        <link rel="stylesheet" type="text/css" href="/css/bootstrap.css">
        <script src="/js/jquery-3.3.1.min.js" type="text/javascript"></script>
        <script src="/js/angular.js" type="text/javascript"></script>
        <script src="/js/bootstrap.min.js" type="text/javascript"></script>
        <script src="/js/indexHandler.js" type="text/javascript"></script>
        <script src="/js/userFactory.js" type="text/javascript"></script>
        <title>
                <%= title %>
        </title>
</head>

<body>
        <header ng-app="index" ng-controller="indexController">
                <nav class="navbar navbar-default navbar-fixed-top">
                        <div class="container">
                                <div class="navbar-header">
                                        <a class="navbar-brand" href="/" style="padding-top:3px">
                                                <img width="200" height="40" src="/images/logo.png" style="float:left">
                                        </a>
                                </div>
                                <div id='navbar' class="navbar-collapse collapse">
                                                <ul class="nav navbar-nav">            
                                                                <li ng-repeat="category in categories">
                                                                      <a href="/{{category.url}}">{{category.text}}</a>
                                                                </li>
                                                            </ul>
                                        <ul class="nav navbar-nav navbar-right" >
                                                <li ng-repeat="url in objects">
                                                        <a name="wishlist" ng-if="url.type === 'wishlist'" ng-click="wishlist()" style="cursor:pointer">{{url.text}}</a>
                                                        <a name="basket" ng-if="url.type === 'basket'" ng-click="basket()" style="cursor:pointer">{{url.text}}</a>
                                                        <a name="profile" ng-if="url.type === 'profile'" ng-click="profile()" style="cursor:pointer">{{url.text}}</a>
                                                        <a name="logout" ng-if="url.type === 'logout'" ng-click="logout()" style="cursor:pointer">{{url.text}}</a>         
                                                        <a ng-if="url.type === 'unAuth'" href='{{url.url}}' style="cursor:pointer">{{url.text}}</a>
                                                     </li>
                                            </ul>
                                </div>
                        </div>
                </nav>
        </header>

        <div id='main'>
                <div id=categories class="container">
                        <p>
                                <%=subcategory.name %>
                        </p>
                        <p>
                                <%=subcategory.page_description %>
                        </p>
                        <% for(var i=0; i<subcategory.categories.length; i++) {%>


                                <div id=category class="col-md-6">

                                        <div class="card mb-6 box-shadow">
                                                <div id='image'>
                                                        <%if(subcategory.categories[i].image){%>
                                                                <!--IMPORTANT!! IF CATEGORY HASNT GOT ANY IMAGE, FAVICON CALLS A PAGE TWO TIMES WTF?-->
                                                                <img src="/images/<%=subcategory.categories[i].image%>" style="max-width: 100% !important; height: auto;width: auto;">
                                                                <%}else{%>
                                                                        <img src="/images/categories/default.png" style="max-width: 100px !important; height: auto;width: auto;">
                                                                        <%}%>
                                                </div>
                                                <div id='information'>
                                                        <p>
                                                                <%=subcategory.categories[i].page_description%>
                                                        </p>
                                                </div>
                                                <% var url = subcategory.parent_category_id + '/'%>
                                                        <% url += subcategory.id + '/' %>
                                                                <% url += subcategory.categories[i].id %>
                                                                        <p>
                                                                                <a href="/<%= url %>" class="btn btn-primary" role="button">Go</a>
                                                                        </p>
                                        </div>
                                </div>


                                <% } %>
                </div>
        </div>
</body>

</html>