<html>
<head>
  <script src="/js/jquery-3.3.1.min.js"></script>
  <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="/css/bootstrap-theme.min.css">
  <script src="/js/bootstrap.min.js"></script>
  <script src="/js/angular.min.js"></script>
  <title><%= title %></title>
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="/" style="padding-top:3px">
              <img width="200" height="40" src="/images/logo.png" style="float:left">
            </a>
          </div>
          <input type="text" placeholder="Search.." name="search">
          <ul class="nav navbar-nav">
                <% for(var i=0; i<allCategories.length; i++) {%>
                        <li>
                            <% var url = '/' %>
                                <% url += allCategories[i].id %>
                                    <a href="<%= url %>">
                                        <%= allCategories[i].name%>
                                    </a>
                        </li>
                        <% } %>
            <li><a href="#">Login</a></li>
            <li><a href="#">Register</a></li>

               
          </ul>
        </div>
        
    </nav>

    <div id='main'>
        <div id=categories class="container">
            <p>              
            </p>
            <% for(var i=0; i<products.length; i++) {%>
                <div id=category class="col-md-6">

                        <div class="card mb-6 box-shadow">
                                <div id='image'>
                                        <img  src="/images/<%=products[i].image_groups[0].images[0].link%>" style="max-width: 100% !important; height: auto;width: auto;" > 
                                </div>
                                <div id='information'>
                                        <p>
                                                <%=products[i].name%>                                                                                        
                                        </p>
                                        <p>
                                            <%=products[i].page_description%>
                                        </p>
                                </div>
                               
                                <%var url = parentURL + '/'%>
                                <% url += products[i].id %>
                                <p><a href="<%= url %>" class="btn btn-primary" role="button">Go</a></p>
                        </div>
                </div>
         

                <% } %>
        </div>
    </div>
</body>
</html>