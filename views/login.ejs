<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="/css/index.css">
    <script src="/js/jquery-3.3.1.min.js" type="text/javascript"></script>
    <script src="/js/angular.js" type="text/javascript"></script>
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/js/userFactory.js" type="text/javascript"></script>
    <script src="/js/loginHandler.js" type="text/javascript"></script>
    <script src="/js/indexHandler.js" type="text/javascript"></script>
    <title>
        LOGIN
    </title>
</head>

<body ng-app="login">
    <header ng-controller="headerController">
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/" style="padding-top:3px">
                        <img width="200" height="40" src="/images/logo.png" style="float:left">
                    </a>
                </div>
                <div id='navbar' class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <% for(var i=0; i<allCategories.length; i++) {%>
                            <li>
                                <% var url = '/' %>
                                    <% url += allCategories[i].id %>
                                        <a href="<%= url %>">
                                            <%= allCategories[i].name%>
                                        </a>
                            </li>
                            <% } %>
                    </ul>
                    <ul class="nav navbar-nav navbar-right" >
                            <li ng-repeat="url in objects">
                                <a href={{url.url}}>{{url.text}}</a>
                             </li>
                        </ul>
                </div>
            </div>
        </nav>
    </header>

    <div id='main'>
        <div class='container' ng-controller="loginController">
            <div id='input-group' class="well col-md-6" style="float: none;  margin: 0 auto;">
                    <form role="form" ng-submit="save()" name='loginForm' >
                            <div class="form-group" >
                              <label for="username">Username</label>
                              <input ng-model="username"  name="username" class="form-control" id="username" placeholder="Enter username" required>          
                                          
                            </div>
                            <div class="form-group">
                              <label for="password">Password</label>
                              <input ng-model="password" name="password" type="password" class="form-control" id="password" placeholder="Password" required>
                        
                            </div>
                            <!--<div class="form-check">
                              <input type="checkbox" class="form-check-input" id="rememberMe">
                              <label class="form-check-label" for="rememberMe">Remember Me</label>
                            </div>-->
                            <button type="submit" class="btn btn-primary">Submit</button>

                              
                          </form>
                          
            </div>
            <div class="col-md-6 alert alert-danger ng-cloak" style="float: none;  margin: 0 auto;" ng-show="alert">
                <strong>Danger!</strong> Username or password is wrong.
            </div> 
        </div>
    </div>
</body>

</html>